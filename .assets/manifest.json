/*This is where the magic starts*/
{
  "manifest_version": 2,
  "name": "OpenGPT-Assistant Voice",
  "description": "Generates an AI-generated voice for responses in OpenAI's chat.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["background/script.js"]
  }
}
