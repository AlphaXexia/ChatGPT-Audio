/*This is where the magic starts*/{
  "manifest_version": 2,
  "name": "OpenGPT-Assistant Voice",
  "version": "1.0",
  "description": "Generate AI-generated voices for Assistant's responses in chat.openai.com",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://www.googleapis.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "OpenGPT-Assistant Voice",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["background/background-script.js"]
  }
}
